    "test:coverage": "node scripts/run-e2e.mjs --coverage",
    "test:unit": "vitest run",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "npx prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,md}'",
    "type-check": "npx tsc --noEmit",
    "preview": "vite preview",
    "prepare": "husky",
    "dev:publish": "vite --mode publish --host",
